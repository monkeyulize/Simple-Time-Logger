<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/project_manager_layout" 
    android:padding="5dp" >
   
	<Button
	    android:id="@+id/remove_checked"
	    android:layout_centerHorizontal="true"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/remove_checked" />
    
    
	<Button 
        android:id="@+id/anchor"
        android:layout_centerHorizontal="true"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_below="@id/remove_checked"
        android:background="#000000"/>  
	<View 
        android:id="@+id/vert_line"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/client_text"
        android:background="#000000"/>     
	
	
	<TextView 
	    android:id="@id/client_text"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/remove_checked"
	    android:padding="5dp"
	    android:layout_alignParentLeft="true"
	    android:text="Clients"
	    android:textSize="18sp"
	    
	    />
	<TextView 
	    android:id="@+id/project_text"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/remove_checked"
	    android:padding="5dp"
	    android:layout_toRightOf="@id/anchor"
	    android:textSize="18sp"
	    android:text="Projects"
	    />


    

    
</RelativeLayout>
</ScrollView>