<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:id="@+id/select_project_client">

    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
  	<TextView
  		android:id="@+id/select_client_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:singleLine="true"
		android:textColor="#000000"
		android:text="@string/select_client"
		android:padding="5dp"
	/> 
	<Spinner 
       android:id="@+id/select_client_spinner" 
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_weight="1"	
       android:background="@drawable/abc_spinner_ab_holo_light"
	/>        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
	<TextView
		android:id="@+id/select_project_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:singleLine="true"
		android:textColor="#000000"
		android:text="@string/select_project"
		android:padding="5dp"
	/> 
	<Spinner 
		android:id="@+id/select_project_spinner" 
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:background="@drawable/abc_spinner_ab_holo_light"
		
	/>        
    </LinearLayout>
</LinearLayout>
